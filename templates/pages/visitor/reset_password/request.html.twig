{% extends 'themes/visitor/base.html.twig' %}

{% block title %}Rénitialisation de mot de passe{% endblock %}

{% block description %} Rénisitialisez votre mot de passe {% endblock %}

{% block main %}

<div class="register rows pt-5">
    <div class="col-lg-5 col-sm-8 col-md-8 mx-auto mt-5 border bg-light p-4 rounded shadow text-success">

        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h4 class="text-center text-success  my-3">Rénitialsez votre mot de passe </h4>


        {{ form_start(requestForm) }}

        <div class="my-3">
           <label>Entrez votre adresse e-mail </label>
           <div class="text-danger">{{form_errors(requestForm.email)}}</div>
           {{form_widget(requestForm.email,{'attr':{'class':'form-control shadow'}})}}
        </div>
        <div class="my-3 ">
            <input formnovalidate type="submit" class="btn btn-success col-12" value="Rénitialisez votre mot de passe">
        </div>

    {{ form_end(requestForm) }}

        </div>
    </div>

{% endblock %}



			