{% extends 'themes/visitor/base.html.twig' %}

{% block title %}Nouveau mot de passe
{% endblock %}

{% block main %}


	<div class="reset rows pt-5">

		<div class="col-lg-5 col-sm-8 col-md-8  mx-auto my-3 border bg-light p-3 rounded shadow text-success">

            <h2 class="text-center text-success my-3">Nouveau mot de passe </h2>

            {{form_start(resetForm)}}

                <div class="my-3">
                    <label>Entrez votre nouveau mot de passe </label>
                    <div class="text-danger">{{form_errors(resetForm.plainPassword.first)}}</div>
                    {{form_widget(resetForm.plainPassword.first,{'attr':{'class':'form-control'}})}}
                </div>
                <div class="my-3">
                    <label>Entrez a nouveau votre mot de passe </label>
                    <div class="text-danger">{{form_errors(resetForm.plainPassword.second)}}</div>
                    {{form_widget(resetForm.plainPassword.second,{'attr':{'class':'form-control'}})}}
                </div>
                <div class="my-3">
                    <input type="submit" class="btn btn-success">
                </div>

            {{form_end(resetForm)}}

        </div>
	</div>


{% endblock %}
