{% extends "themes/visitor/base.html.twig" %}

{% block title %}
	Recettes bébé
{% endblock %}

{% block description %}
	Recettes sucrées bébé: Se régaler et surtout se faire plaisir sans culpabiliser !
{% endblock %}

{% block keywords %}
	recettes, healthy, bébé,sain
{% endblock %}

{% block main %}
	
	<h1 class="text-center bg-warning display-5 p-4 my-auto">Recettes Bébé</h1>


	<div class="container">
			<div class="row px-3">
				{% for recipeBaby in recipesBaby %}
				<div class="card my-3 col-lg-6 col-md-12 col-sm-12 border-warning">
					<div class="row g-0 h-100">
						<div class="col-12 col-md-6">
							<img class="img-fluid w-100 h-80 mt-4 rounded" src="{{vich_uploader_asset(recipeBaby, 'imageFile') }}" alt="{{ recipeBaby.title }}">
						</div>
						<div class="col-12 col-md-6">
							<div class="card-body">
								<h3 class="card-title  text-center  my-3">{{recipeBaby.title}}</h3>
								<p class="card-text">{{recipeBaby.content|striptags|u.truncate(100,'....')|raw}}</p>
								<p class="card-text">
									<small class="text-body-secondary"> Publiée {{recipeBaby.publishedAt|ago}}</small>
								</p>
								<a class="btn btn-warning col-12 " href="{{path('visitor.recipes.baby_content',{'id':recipeBaby.id})}}"> Lire les détails </a>
							</div>
						</div>
					</div>
				</div>
				{% endfor %}
			</div>
	</div>

  
{% endblock %}
