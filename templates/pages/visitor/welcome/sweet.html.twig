{% extends "themes/visitor/base.html.twig" %}

{% block title %}
	Recettes Sucrées
{% endblock %}

{% block description %}
	Recettes sucrées healthy: Se régaler et surtout se faire plaisir sans culpabiliser !
{% endblock %}

{% block keywords %}
	recettes, healthy, sucrées,sain
{% endblock %}

{% block main %}
	<h1 class="text-center text-light bg-danger display-5 p-4 my-auto">Recettes Sucrées</h1>

	<div class="container">
			<div class="row">
				{% for recipeSweet in recipesSweet %}
				<div class="card my-3 col-lg-6 col-md-12 col-sm-12 border-danger">
					<div class="row g-0 h-100">
						<div class="col-6">
							<img class="img-fluid w-100 h-100 p-0" src="{{vich_uploader_asset(recipeSweet, 'imageFile') }}" alt="{{ recipeSweet.title }}">
						</div>
						<div class="col-6">
							<div class="card-body">
								<h3 class="card-title  text-center text-danger my-3">{{recipeSweet.title}}</h3>
								<p class="card-text">{{recipeSweet.content|striptags|u.truncate(100,'....')|raw}}</p>
								<p class="card-text">
									<small class="text-body-secondary"> Publiée {{recipeSweet.publishedAt|ago}}</small>
								</p>
								<a class="btn btn-danger col-12 " href="{{path('visitor.recipes.sweet_content',{'id':recipeSweet.id})}}"> Lire les détails </a>
							</div>
						</div>
					</div>
				</div>
				{% endfor %}
			</div>
	</div>
  
{% endblock %}
