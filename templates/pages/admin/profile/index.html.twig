{% extends "themes/admin/base.html.twig" %}

{% block title %}profil de
	{{app.user.firstName}}
	{{app.user.lastName}}
{% endblock %}

{% block main %}
	<div class="container">


		<div class="row bg-body-secondary position-relative p-5">
        {% for message in app.flashes('success') %}
		
	    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
  		{{message}}
  		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	    </div>

	     {% endfor %}
			<div class="col-md-5 mb-md-0 p-md-4 my-3">
				<img src="{{asset('images/recette_sucrées.jpg')}}" class="w-100  rounded-circle" alt="...">
			</div>
			<div class="col-md-7 p-5 bordered bg-light rounded shadow">
				<div>
                <h4 class="mb-5 text-success text-center ">Vos cordonnées personnelles</h4>
                  <p class="fs-5" ><span class="text-success">Prénom :</span> {{app.user.firstName}}</p>
                    <p class="fs-5" ><span class="text-success">Nom :</span> {{app.user.lastName}}</p>
                    <p class="fs-5" ><span class="text-success">E-mail :</span> {{app.user.email}}</p>
                </div>
                <div class="text-center">
                    <a class=" m-1 btn btn-success" href='{{path('admin.profile.edit')}}'>Modifier les cordonnées</a>
                    <a class="btn btn-warning" href="{{path('admin.profile.edit.password')}}">Modifier le mot de passe</a>
                </div>
			</div>
		</div>

	</div>


{% endblock %}
